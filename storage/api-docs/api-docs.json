    "components": {
        "schemas": {
            "ProductCreate": {
                "description": "<b> Register Product model</b> <br>",
                "properties": {
                    "name": {
                        "title": "Name",
                        "description": "Name of the product",
                        "type": "string",
                        "example": "Mi producto"
                    },
                    "description": {
                        "title": "Description",
                        "description": "Description of the product",
                        "type": "string",
                        "example": "Hola esta es mi primer producto"
                    },
                    "stock": {
                        "title": "Stock",
                        "description": "stock of the product",
                        "type": "integer",
                        "example": 20
                    },
                    "sku": {
                        "title": "Sku",
                        "description": "Sku of the product",
                        "type": "string",
                        "example": "REF123"
                    },
                    "price": {
                        "title": "Price",
                        "description": "price of the product",
                        "type": "decimal",
                        "example": 50000
                    },
                    "category_id": {
                        "title": "Category",
                        "description": "Category of the product",
                        "type": "string",
                        "example": 3
                    },
                    "image": {
                        "title": "Image",
                        "description": "Image of the product",
                        "type": "string",
                        "format": "binary"
                    }
                },
                "type": "object"
            }
        },
